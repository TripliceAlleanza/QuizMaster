<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QuizMaster___Server.Views.Styles">

    <Style TargetType="{x:Type Button}" x:Key="ButtonStyleTypeAnswer">

        <Setter Property="Background" Value="#FF1E30B4"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontFamily" Value="Resources\Fonts\Oxygen-Regular.ttf" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="60"/>
    </Style>
    

</ResourceDictionary>