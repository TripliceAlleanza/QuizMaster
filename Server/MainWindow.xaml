<Window x:Name="MainFormServer" x:Class="QuizMaster___Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizMaster___Server"
        mc:Ignorable="d"
        Title="QuizMaster" Height="500" Width="1025" Background="White" WindowStartupLocation="CenterScreen">

    
        
        <DockPanel Margin="744,0,0,-0.113" LastChildFill="False" Background="#FF0C0A0A">
            <DockPanel.Effect>
                <DropShadowEffect Color="#FFC50000" ShadowDepth="0" BlurRadius="0"/>
            </DockPanel.Effect>

            <Button  x:Name="btnPuzzleEditor" Height="106" Width="200" BorderThickness="1,1,2,2" FontSize="36" RenderTransformOrigin="0.5,0.5" BorderBrush="#FF330000" DockPanel.Dock="Right" Margin="35,104,35.423,0" >
                <Button.Background>
                    <ImageBrush ImageSource="Resources/fondo-rojo-circular-abstracto_8466-2.jpg" Stretch="UniformToFill" TileMode="FlipXY"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect Color="#FFC00000" BlurRadius="0" ShadowDepth="0"/>
                </Button.Effect>
                <Button.Foreground>
                    <ImageBrush ImageSource="Resources/Blue-Abstract-Background-10-1.jpg"/>
                </Button.Foreground>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Puzzle&#10;Editor" FontFamily="Arial Black" FontSize="42" TextAlignment="Center" Foreground="White">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="3" ShadowDepth="2.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Button>
        

    </DockPanel>

  
</Window>
