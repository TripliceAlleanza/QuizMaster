root = true

[*]
end_of_line = lf

[*.cs]
indent_style = tab
trim_trailing_whitespace = true
csharp_new_line_before_open_brace = none:error
dotnet_style_qualification_for_field = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_for_built_in_types = false:warning
csharp_style_var_elsewhere = false:suggestion
dotnet_style_object_initializer = true:suggestion
dotnet_style_collection_initializer = true:suggestion
dotnet_style_coalesce_expression = true:suggestion
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_accessors = true:suggestion
csharp_style_inlined_variable_declaration = true:suggestion
csharp_new_line_before_else = false:error
csharp_new_line_before_catch= false:error
csharp_new_line_before_finally= false:error
csharp_new_line_before_members_in_object_initializers= false:suggestion
csharp_new_line_before_members_in_anonymous_types= false:suggestion
dotnet_sort_system_directives_first = true:suggestion
csharp_indent_case_contents = true:suggestion
csharp_indent_switch_labels = true:suggestion
csharp_space_after_cast = false:suggestion
csharp_space_between_method_declaration_parameter_list_parentheses = false:warning
dotnet_naming_symbols.class.applicable_kinds = class,interface,property,struct,method,enum,delegate,event
dotnet_naming_symbols.attributes.applicable_kinds = field,parameter
dotnet_naming_style.class.capitalization = pascal_case
dotnet_naming_style.attribues.capitalization = camel_case